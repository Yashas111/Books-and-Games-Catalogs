<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="shortcut icon" href="../assets/Images/star.ico" />
        <link href="/assets/bootstrap themes/1/theme.css" type="text/css" rel="stylesheet">
        <link href="/assets/styles5.css" type="text/css" rel="stylesheet">
        <script src="/assets/app4.js"></script>
        <title>Games</title>
    </head>
    <body>
        <!-- navbar -->
        <nav class="navbar fixed-top navbar-expand-lg navbar-expand-md navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand">MENU</a>
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation" style="">
                <span class="navbar-toggler-icon"></span>
              </button>

              <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                  <li class="nav-item">
                    <a class="nav-link" href="/admin/profile">Profile<span class="sr-only">(current)</span></a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/admin/addBook">Add Book</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/admin/addGame">Add Game</a>
                  </li>
                  <li class="nav-item ">
                    <a class="nav-link" href="/admin/books">Books</a>
                  </li>
                  <li class="nav-item active">
                    <a class="nav-link" href="/admin/games">Games</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/admin/orders">Orders</a>
                  </li>
                </ul>
                <a class="btn btn-outline-success" href="/admin/logout">Log out</a>
              </div>
            </div>
        </nav>

        <!-- heading -->
        <div class="jumbotron text-center">
            <h1 class="display-1">Deluxe Catalogs</h1>
        </div>

        <!-- search bar -->
        <div class="container">
            <input class="form-control form-control-lg" id="searchBar-games" type="text" placeholder="search games...">
        </div>

        <div class="container text-muted">
            <!-- cards -->
            <div class="row games">
              <% games.forEach(function(gms){ %>
                <div class="col-md-4 col-lg-3 game">
                    <div class="card">
                        <img src= <%= gms.image %> class="card-img-top img-fluid" />
                        <form method="POST" action="/admin/removeG/<%= gms.gid %>">
                          <button class="btn btn-success bukmark-btn" id="tag" data-toggle="tooltip" data-placement="top" title="remove this game">x</button>
                        </form>
                        <div class="card-block text-center">
                            <h3 class="card-title"><%= gms.gname %></h3>
                            <h5>-<%= gms.company %></h5>
                            <button type="button" class="btn btn-outline-info details-btn" data-toggle="modal" data-target=".bd-example-modal-lg">Details...</button>
                            <p style="display: none;"><%= gms.description %></p>
                        </div>
                    </div>
                </div>
              <% }) %>
            </div>
        </div>

        <!-- Modal -->
        <% include Partials/adminModal.ejs %>


    </body>

    <script src="/assets/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="/assets/js/bootstrap.js"></script>
</html>
